# Eternal Bandit Config — Top-level keys for CI parsers
# Guardian: Beale | Purpose: Ensure Bandit can parse config reliably
exclude_dirs:
  - inventory
  - tests
  - .venv
  - venv
  - .audit
  - .git
  - __pycache__
skips:
  - B404  # import_subprocess
  - B603  # subprocess without shell=True
  - B607  # partial_paramiko_call_with_default_unknown_arguments
  - B110  # try_except_pass
severity: medium
