.env.example
# FreeRADIUS Deployment Environment Variables
# Copy to .env and fill in actual values before deployment

# LDAP Configuration
LDAP_PASS="changeme123"           # AD/LDAP service account password
LDAP_USER="cn=freeradius,ou=Services,dc=rylan,dc=internal"

# RADIUS Configuration
RADIUS_SECRET="radiussecret123"   # Shared secret for RADIUS clients
RADIUS_SECRET_LENGTH=20            # Minimum 20 characters recommended

# Certificates
CERT_DAYS=365                      # Server certificate validity (days)
CA_IP="10.0.10.10"                 # Rylan DC IP for CA import

# Network Configuration
MGMT_VLAN=1
MGMT_SUBNET="10.0.1.0/27"
RADIUS_IP="10.0.10.11"
RADIUS_PORT_AUTH=1812
RADIUS_PORT_ACCT=1813

# Service Account
DC_SSH_KEY="${HOME}/.ssh/id_rsa"   # SSH key for rylan-dc access

# Security
MAX_AUTH_RETRIES=3
AUTH_TIMEOUT=30
SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL="info"
LOG_DIR="/var/log/freeradius"
LOG_ROTATION_SIZE="100M"
LOG_RETENTION_DAYS=14

# Feature Flags
ENABLE_LDAP=true
ENABLE_AUDIT=true
ENABLE_FAIL2BAN=true
ENABLE_NFTABLES=true

# Backup
BACKUP_DIR="/var/backups"
BACKUP_RETENTION_DAYS=30
